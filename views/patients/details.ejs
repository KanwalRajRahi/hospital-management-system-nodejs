<div class="card">
    <div class="card-header bg-success text-white">
        <h4><i class="fas fa-user"></i> <%= patient.name %> Details</h4>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>Name:</strong> <%= patient.name %></p>
                <p><strong>Age:</strong> <%= patient.age %></p>
                <p><strong>Gender:</strong> <%= patient.gender %></p>
            </div>
            <div class="col-md-6">
                <p><strong>Email:</strong> <%= patient.contactDetails.email %></p>
                <p><strong>Phone:</strong> <%= patient.contactDetails.phone %></p>
                <p><strong>Address:</strong> <%= patient.contactDetails.address %></p>
            </div>
        </div>
        
        <div class="mb-3">
            <h5>Medical History</h5>
            <p><%= patient.medicalHistory || 'No medical history recorded.' %></p>
        </div>
        
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a href="/patients" class="btn btn-secondary me-md-2">Back to List</a>
            <a href="/patients/<%= patient._id %>/edit" class="btn btn-primary me-md-2">Edit</a>
            <form action="/patients/<%= patient._id %>?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this patient?')">Delete</button>
            </form>
        </div>
    </div>
</div>